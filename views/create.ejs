<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header') %>
    <title>create pin</title>
</head>
<body class="bg-slate-100">
    <%- include("./partials/nav") %>
    <div class="w-full min-h-screen px-10 py-5 text-white">
        <h1 class="text-xl text-black">Create a new Post</h1>
        <!-- <hr class="opacity-90 mt-3"> -->

        <div class="">
            <form action="/pin/create" method="post" enctype="multipart/form-data" class="flex flex-row">
                <div class="w-1/3 p-6 flex justify-center items-center">
                    <div id="div-upload" class="hidden rounded-lg overflow-hidden w-[236px] h-auto border-2">
                        <img src="#" id="uploaded-file" alt="uploaded image" class="w-full h-full object-cover">
                    </div>
                    <!-- template for upload -->
                    <div id="upload-file-input" class="flex items-center justify-center w-full">
                        <label for="dropzone-file" class="flex flex-col items-center justify-center w-[375px] h-[453px] border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:hover:bg-bray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600">
                            <div class="flex flex-col items-center justify-center pt-5 pb-6">
                                <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
                                </svg>
                                <p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Click to upload</span> or drag and drop</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">SVG, PNG, JPG or GIF (MAX. 800x400px)</p>
                            </div>
                            <input id="dropzone-file" type="file" class="hidden" name="image-pin"/>
                        </label>
                    </div> 

                    <!-- <input class="block w-1/3 px-3 py-2" type="file" name="image-pin" > -->
                </div>
                <div class="w-2/3 p-6 text-black">
                    <div class="flex flex-col gap-2 min-w-full">
                        <div>
                            <label for="title" class="sr-only">Title</label>
                    
                            <div class="relative">
                              <input
                                type="text"
                                class="w-[50%] rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                                placeholder="Add a title"
                                name="title"
                              />
                            </div>
                        </div>
                    
                        <div>
                            <label for="description" class="sr-only">Description</label>
                    
                            <div class="relative">
                                <textarea name="description" id="" class="w-[50%] h-24 resize-none rounded-lg  border-gray-200 p-4 pe-12 text-sm shadow-sm"
                                placeholder="Add a detailed description"></textarea>
                            </div>
                        </div>

                        <div>
                            <label for="tags" class="sr-only">Tagged Topics</label>
                    
                            <div class="relative">
                              <input
                                type="text"
                                class="w-[50%] rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"
                                placeholder="Search for a tag"
                                name="tags"
                              />
                            </div>
                        </div>

                          <button
                            type="submit"
                            class="block w-[50%] rounded-lg bg-indigo-600 px-5 py-3 text-sm font-medium text-white"
                          >
                            publish
                          </button>
                    </div>
                </div>
            </form>
        </div>
        
    </div>


    <script>
        document.querySelector('#dropzone-file').addEventListener('change', (event) => {
            const input = event.target;
            if(input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    document.querySelector('#uploaded-file').src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);
            }
            document.querySelector('#div-upload').classList.remove('hidden')
            document.querySelector('#upload-file-input').classList.add('hidden');

        })
    </script>
</body>
</html>