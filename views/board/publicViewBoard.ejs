<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/header') %>
    <title>view Board</title>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <button
      class="absolute rounded-full w-10 h-10 shadow-xl hover:shadow-inner flex justify-center items-center top-[100px] left-[40px]"
    >
      <a href="javascript:history.back()"
        ><span class="material-symbols-outlined"> arrow_back </span></a
      >
    </button>

    <div class="flex flex-col items-center mt-5 font-raleway">
      <div class="flex flex-row gap-2 px-2 py-3 items-center">
        <p class="text-3xl font-bold"><%= board.title %></p>
         </div>
      <!-- feed -->
      <div class="w-full justify-center flex flex-wrap gap-5 my-3">
        <div class="p-5 sm:p-8">
          <div
            class="columns-1 gap-2 sm:columns-2 sm:gap-4 md:columns-4 lg:columns-7 [&>div:not(:first-child)]:mt-4"
          >
            <% board.pins.forEach(pin => { %>
            <div class="h-auto rounded-3xl overflow-hidden">
              <a href="/pin/<%= pin._id %>"
                ><img
                  src="<%= pin.image %>"
                  class="w-full h-full object-cover"
                  alt="pin"
              /></a>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
